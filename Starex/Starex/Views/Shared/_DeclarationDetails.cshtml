@model Starex.Models.Declaration

<div class="modal fade show" tabindex="-1" role="dialog" id="declarationDetails">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">

                            @Html.DisplayNameFor(model => model.TrackingCode)
                        </dt>
                        <dd class="col-sm-10 details">

                            @if (Model.CountryId == 1)
                            {
                                <img src="~/images/usa.7b416161.png" />
                            }
                            else if (Model.CountryId == 2)
                            {
                                <img src="~/images/turkey.png" />
                            }

                            else
                            {
                                <img src="~/images/chin.png" />
                            }
                            @Html.DisplayFor(model => model.TrackingCode)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Shop)
                        </dt>
                        <dd class="col-sm-10" style="cursor:pointer;">
                            @Html.DisplayFor(model => model.Shop)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Quantity)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductPrice)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductPrice)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DeliveryCode)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DeliveryCode)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OrderNumber)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OrderNumber)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Comment)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Comment)
                        </dd>

                        <dt class="col-sm-2">
                            Sənəd
                        </dt>
                        <dd class="col-sm-10 declarationImage">
                           
                            <img src="~/images/@Model.FileName" alt="my img" />
                            
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary modalNone" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

