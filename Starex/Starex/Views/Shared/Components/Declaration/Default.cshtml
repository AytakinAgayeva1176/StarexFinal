@model Starex.ViewModels.DeclarationViewModel
@{
    Layout = null;

}

<div class="form-wrap">
    <form asp-controller="Declaration" asp-action="NewDeclaration" method="post" enctype="multipart/form-data">
        <div class="border border-info  p-4  mb-4 col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div hidden>
                    <label asp-for="CountryId" class="control-label"></label>
                    <input name="CountryId" asp-for="CountryId" class="form-control" />
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
                <div class="col-lg-3">
                    <div class="my-2  form-group">
                        <label asp-for="Shop" class="control-label">Mağaza:</label>
                        <input asp-for="Shop" class="form-control" />
                        <span asp-validation-for="Shop" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="my-2 form-group">
                        <label asp-for="ProductType" class="control-label"></label>
                        <select asp-for="ProductType" class="form-control select2DropDown">
                        </select>
                        <div class="mt-2 mb-0 position-relative form-group">
                            <label class=" d-flex align-items-center cursor-pointer">
                                <input id="chk" class="position-absolute mr-1 cursor-pointer form-check-input" asp-for="LiquidOrNot" />
                                <small class="">Məhsulun tərkibində maye var</small>
                            </label>
                        </div>
                        <span asp-validation-for="ProductType" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="my-2 form-group">
                        <label asp-for="Quantity" class="control-label">Miqdar:</label>
                        <input type="number" step="1" min="1" max="100" asp-for="Quantity" class="form-control" value="1">
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="my-2 form-group">
                        <label asp-for="ProductPrice" class="control-label">Məhsulun qiyməti (<span class="currency"></span>) </label>
                        <input type="number" asp-for="ProductPrice" step="0.01" min="1" class="form-control" value="" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row flex-lg-row">

                <div class="col-lg-3">
                    <div class="my-2 form-group">
                        <label asp-for="File" class="control-label">Sənəd:</label>
                        <input type="file" asp-for="File" class="form-control" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="my-2 form-group">
                        <label asp-for="DeliveryCode" class="control-label">Kargo takip numarası:</label>
                        <input asp-for="DeliveryCode" class="form-control" />
                        <span asp-validation-for="DeliveryCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="my-2 form-group">
                        <label asp-for="OrderNumber" class="control-label">Sipariş numarası:</label>
                        <input asp-for="OrderNumber" class="form-control" />
                        <span asp-validation-for="OrderNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="my-2 form-group">
                        <label asp-for="Comment" class="control-label">Şərh</label>
                        <textarea asp-for="Comment" class="form-control" rows="1"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <p>
                    İndi istədiyiniz bütün linkləri 1 sifariş şəklində göndərə bilərsiniz.
                    Bunun üçün ekranın sağ aşağı kənarında "Sifariş əlavə et" düyməsini
                    sıxaraq növbəti linki əlavə etməlisiniz.
                </p>
                <hr>
            </div>
        </div>


        <div class="row form-bottom">
            <div class="col-12 d-flex justify-content-between">
                <div class="position-relative form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input"> Məsafəli satış <a href="/pages/conditions/" target="_blank" class="text-primary rules-link">şərtlərini</a> qəbul edirəm
                    </label>

                    <div class="form-group">
                        <input type="submit" value="Göndər" class="btn send-btn mx-2 btn btn-secondary" />
                    </div>
                </div>

            </div>
        </div>


    </form>

</div>
