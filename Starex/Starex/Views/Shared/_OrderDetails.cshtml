@model Starex.Models.Order


<div class="modal fade show" tabindex="-1" role="dialog" id="orderDetails">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">

                            @Html.DisplayNameFor(model => model.TrackingCode)
                        </dt>
                        <dd class="col-sm-10 details">

                            @if (Model.CountryId == 1)
                            {
                                <img src="~/images/usa.7b416161.png" />
                            }
                            else if (Model.CountryId == 2)
                            {
                                <img src="~/images/turkey.png" />
                            }

                            else
                            {
                                <img src="~/images/chin.png" />
                            }
                            @Html.DisplayFor(model => model.TrackingCode)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Url)
                        </dt>
                        <dd class="col-sm-10" style="cursor:pointer;">
                            <a href=@Html.DisplayFor(model => model.Url)>
                                <span class="copy-btn" data-type="attribute"
                                      data-attr-name="data-clipboard-text" data-model="couponCode"
                                      data-clipboard-text="@Html.DisplayFor(model => model.Url)">
                                    @Html.DisplayFor(model => model.Url)
                                </span>
                            </a>
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Quantity)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductSize)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductSize)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductColor)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductColor)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Product_Price)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Product_Price)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cargo_Price)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cargo_Price)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PriceResult)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PriceResult)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Comment)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Comment)
                        </dd>
                    </dl>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary modalNone" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

